<div id="signup">
  <div class="container-fluid pt-5 pb-5">
    <h1 class="text-center">Create an account</h1>
    <div style="max-width: 450px;" class="mx-auto" >
      <p class="text-center">Let's get started! Becoming a member is free and only takes a few minutes.</p>
      <hr/>
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="vorName">First Name</label>
          <input class="form-control" id="full-name" name="vorName" type="text"  placeholder="Harry" autocomplete="firstName" focus-first>
          <div class="invalid-feedback">Please enter your first Name.</div>
        </div>
        
        <div class="form-group">
          <label for="nachName">Second Name</label>
          <input class="form-control" id="height" name="nachName" type="text"  placeholder="Potter" autocomplete="secondName" focus-first>
          <div class="invalid-feedback">Please enter your second Name.</div>
        </div> 
        <div class="form-group">
          <label for="birthday">Birthday</label>
          <input class="form-control" id="birthday" name="birthday" type="text"  placeholder="01.01.2000" autocomplete="birthday" focus-first>
          <div class="invalid-feedback">Please enter your birthday.</div>
        </div> 
        
        <div class="form-group">
          <label for="userName">UserName</label>
          <input class="form-control" id="weight" name="userName" type="text"  placeholder="chapoFranz123" autocomplete="userName" focus-first>
          <div class="invalid-feedback">Please enter your weight.</div>
        </div> 
        <div class="form-group">
          <label for="studiengang" class="form-label">Studiengang</label>
          <select name="studiengang" id="studiengang" class="form-select" required>
              <option value="">--Wählen einen Studiengang aus--</option>
              <% studiengaenge.forEach(function(studiengang) { %>
                  <option value="<%= studiengang.id %>">
                      <%= studiengang.name %> (<%= studiengang.id %>)
                  </option>
                  <% }); %>
          </select>
      </div>

        <div class="form-group">
          <label for="email-address">Email address</label>
          <input class="form-control" id="emaila-address" name="emailAddress" type="email"  placeholder="sturgeon@example.com" autocomplete="email">
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>
        <div class="form-group">
          <label for="password">Choose a password</label>
          <input class="form-control" id="password" name="password" type="password"  placeholder="••••••••" autocomplete="new-password">
          <div class="invalid-feedback">Please enter a password.</div>
        </div>
        <div class="form-group">
          <label for="confirm-password">Confirm password</label>
          <input class="form-control" id="confirm-password" name="confirmPassword" type="password"  placeholder="••••••••" autocomplete="new-password">
          <div class="invalid-feedback">Your password and confirmation do not match.</div>
        </div>
        <div class="form-group form-check">
          <input class="form-check-input" id="terms-agreement" name="termsAgreement" type="checkbox" v-model="formData.agreed">
          <label for="terms-agreement" class="form-check-label">I have read &amp; agree to the <a target="_blank" href="/terms">terms of service</a>.</label>
        </div>
        <span>It looks like there's already an account with your email address. If you forgot your password, you can recover it <a href="password/forgot">here</a>.</span>
        <div class="form-group">
          <button type="submit" class="btn-dark btn-lg btn-block">Create account</button>
        </div>
      </ajax>
      <p class="text-center">Have an account? <a href="/login">Sign in</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
