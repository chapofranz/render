<div class="container-fluid dashboard-container">
    <div class="dashboard-content">
        <h1 class="text-center mb-4" id="dashheader">Dashboard</h1>
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-header">Benutzerinformation</div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Vorname: <%= benutzer.vorname %>
                        </li>
                        <li class="list-group-item">Nachname: <%= benutzer.nachname %>
                        </li>
                        <li class="list-group-item">Nutzername: <%= benutzer.nutzername %>
                        </li>
                        <li class="list-group-item">Email: <%= benutzer.email %>
                        </li>
                        <li class="list-group-item">Geburtsdatum: <%= benutzer.geburtsdatum %>
                        </li>
                        <li class="list-group-item">Rolle: <%= benutzer.role.name %>
                        </li>
                        <li class="list-group-item">Studiengang: <%= benutzer.studiengang.name %>
                        </li>
                        <% if (benutzer.role.name==='Admin' ) { %>
                            <li class="list-group-item">
                                <a href="/benutzer" class="btn btn-primary">Sie sind Administrator, weitere Benutzer
                                    verwalten?</a>
                            </li>
                            <% } %>

                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="sign-up-button text-center">
                <div class="button"><a class="sec-button-own" href="http://localhost:1337">ZurÃ¼ck zur Homepage
                        ></a></div>
            </div>
        </div>
    </div>
</div>