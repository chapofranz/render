<div class="container-fluid destoryOne-container">
    <h1>Benutzer </h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nutzername</th>
                <th>Email</th>
                <th>Aktion</th>
            </tr>
        </thead>
        <tbody>
            <% benutzers.forEach(function(benutzer) { %>
                <tr>
                    <td>
                        <%= benutzer.id %>
                    </td>
                    <td>
                        <%= benutzer.nutzername %>
                    </td>
                    <td>
                        <%= benutzer.email %>
                    </td>
                    <td>
                        <form action="/benutzer/destroy/<%= benutzer.id %>" method="POST">
                            <input class="btn btn-danger" type="submit" value="Löschen"
                                onclick="return confirm('Sind Sie sicher, dass Sie diesen Benutzer löschen möchten?');">
                        </form>
                    </td>
                    <td>
                        <form action="/benutzer/edit/<%= benutzer.id %>" method ="POST">
                           <input class="btn btn-warning" type="submit" value="Edit"
                            onclick="return confirm('Sind Sie sicher, dass Sie diesen Benutzer bearbeiten möchten?');">
                        </form>   
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <a class="btn btn-primary" href="/benutzer/new">Hinzufügen</a>
</div>