            <div class="row">
                <div class="col-2">
                    Nutzername
                </div> 
                <div class="col-10">
                    <%= user.userName %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    E-Mail
                </div> 
                <div class="col-10">
                    <%= user.email %>
