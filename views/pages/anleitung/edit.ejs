<div class="container">
    <form action="/anleitung/<%=anleitung.id%>/update" method="post" enctype="multipart/form-data">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" value="<%= anleitung.name %>" name="name">
            </div>
            <div class="form-group">
                <label for="modul" class="col-form-label-lg">Modul</label>
                <select name="modul" id="modul" class="form-select" required>
                    <option value="<%= anleitung.modul.name %>">--WÃ¤hlen ein Modul aus--</option>
                    <% module.forEach(function(modul) { %>
                        <option value="<%= modul.id %>">
                            <%= modul.name %> (<%= modul.id %>)
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" class="form-control" maxlength="80" value="<%= anleitung.beschreibung %>" name="beschreibung">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Data upload</label>
                <input type="file" maxlength="255" class="form-control" size="40" value="<%= anleitung.data %>" name="data">
            <div class="form-group">
                <label class="col-form-label-lg">Author</label>
                <input type="text" maxlength="255" class="form-control" size="40" value="<%= anleitung.author %>" name="author">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Aktualisieren</button>
    </form>
</div>
