<div class="container">
    <form action="/skript/<%=skript.id%>/update" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" value="<%= skript.name %>" name="name">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" class="form-control" maxlength="8" value="<%= skript.beschreibung %>" name="beschreibung">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Data upload</label>
                <input type="file" maxlength="255" class="form-control" size="40" value="<%= skript.data %>" name="data">
                <a href="/skript/<%=skript.id %>/uploadDataForm" class="btn btn-primary">Upload Data</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Author</label>
                <input type="text" maxlength="255" class="form-control" size="40" value="<%= skript.author %>" name="author">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Aktualisieren</button>
    </form>
</div>